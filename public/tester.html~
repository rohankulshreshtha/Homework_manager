   <tr>
      <th>subject</th>
      <th>deadline</th>
      <th>teacher</th>
      <th>details</th>
      <th>change status</th>
   </tr>
   
   <tr ng-repeat = "hw in hws | orderBy:'deadline'">
      <td>{{ hw.subject }}</td>
      <td>{{ hw.deadline }}</td>
      <td>{{ hw.teacher }}</td>
      <td>{{ hw.details }}</td>
      <td><button ng-click="editsubject(hw.subject)" class="w3-btn w3-hover-white">delete</button></td>
   </tr>
 </table>
 </script>
