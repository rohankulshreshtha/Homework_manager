 <script type="text/ng-template" id="viewphw">
 <h2> list of all pending homework </h2>
 
 
 <table id="myTable">
   <tr>
      <th>subject</th>
      <th>deadline</th>
      <th>teacher</th>
      <th>details</th>
      <th>change status</th>
   </tr>
   
   <tr ng-repeat = "hw in hws | orderBy:'deadline'">
      <td>{{ hw.subject }}</td>
      <td>{{ hw.deadline }}</td>
      <td>{{ hw.teacher }}</td>
      <td>{{ hw.details }}</td>
      <td><button ng-click="editsubject(0,hw.subject)" class="w3-btn w3-hover-white">done</button>
	<button ng-click="editsubject(1,hw.subject)" class="w3-btn w3-hover-white">delete</button>
	</td>
   </tr>
 </table>
 </script>
 <script type="text/ng-template" id="viewdhw">
 <h2> list of all done homework </h2>
 
 
