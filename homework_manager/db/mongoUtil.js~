var MongoClient = require( 'mongodb' ).MongoClient;
var config = require('../config/config')
var _db;

module.exports = {

  connectToServer: function( callback ) {
    MongoClient.connect( config.db, function( err, db ) {
      _db = db;
      return callback( err );
    } );
  },

  getDb: function() {
    return _db;
  }
};
